<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="res" type="edu.stanford.protege.gwt.graphtree.client.TreeNodeViewResources"/>
    <ui:style>
        .main {
            -webkit-touch-callout: none;
            -webkit-user-select: none;
            -moz-user-select: none;
            -ms-user-select: none;
            user-select: none;
            overflow: hidden;
            display: flex;
            flex-direction: column ;
        }

        .row {
            white-space: nowrap;
            display: flex;
            flex-direction: row;
            align-items: center;
        }

        .handle {
            cursor: pointer;
        }

        .rendering {
            margin-left: 0.3em;
            -webkit-user-select: text;
            -moz-user-select: text;
            -ms-user-select: text;
            user-select: text;
        }

        .childContainer {
            overflow: hidden;
            width: inherit;
            height: auto;
            position: relative;
            top: 0;
            left: 0;
        }

        .childContainerHolder {
            overflow: hidden;
            width: inherit;
            height: 0;
        }
    </ui:style>
    <g:HTMLPanel addStyleNames="{style.main}">
        <g:FlowPanel ui:field="content" addStyleNames="{res.style.row} {style.row}">
            <g:Image ui:field="handleImage" addStyleNames="{res.style.handle} {style.handle}"/>
            <g:HTML ui:field="rendering" addStyleNames="{style.rendering}"/>
        </g:FlowPanel>
        <g:LazyPanel ui:field="childContainerHolder" addStyleNames="{style.childContainerHolder}">
            <g:FlowPanel ui:field="childContainer" addStyleNames="{style.childContainer}"/>
        </g:LazyPanel>
    </g:HTMLPanel>
</ui:UiBinder>